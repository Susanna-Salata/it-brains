{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <header>
        <div>
            <h1>{{title}}</h1>
        </div>
        <div>
            <b>{{position}}</b>
        </div>
        <br>
        <div>
            <em> {{salary}} </em>
        </div>
        <br>
        <hr>
    </header>

    <main>
        <section>
            {{#with summary}}
            <div>
                <h2>{{title}}</h2>
            </div>
            <div>
                <p> {{text}} </p> 
            </div>
            {{/with}}
        </section>

        <section>
            {{#with experience}}
                {{>title data=job_1}}
                {{>title data=job_2}}
            {{/with}}
        </section>
    </main>

    <footer>
        <hr>
        <br>
        {{#with social}}
            {{>link data=email}}
            {{>link data=phone}}
            {{>link data=facebook}}
        {{/with}}
    </footer>

</div>

